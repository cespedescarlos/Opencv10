<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_descolor"
    android:paddingTop="60dp"
    tools:context="com.example.cespe.opencv10.MainActivity">


    <ImageView
        android:id="@+id/ima_view_original"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo"
        android:layout_alignLeft="@+id/textView_result"
        android:layout_alignStart="@+id/textView_result" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Foto Scan es la aplicacion para obtener informacion de un Trabajo realizado, apartir de una Imagen.."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ima_view_original"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/estilo_boton"
        android:id="@+id/bt_visualizar_main"
        android:text="Comenzar"
        android:layout_below="@+id/textView_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />
</RelativeLayout>
